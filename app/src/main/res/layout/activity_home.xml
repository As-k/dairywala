<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_color"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TableLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon1"
        android:layout_margin="10dp"/>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent">
        <Button
            style="@style/button_style"
            android:text="Farmer"
            android:drawableLeft="@drawable/farmers"
            android:onClick="buttonFarmer"
            android:id="@+id/farmer"/>
    </TableRow>
    <TableRow
        android:gravity="center">
        <Button
            style="@style/button_style"
            android:text="Billing"
            android:drawableLeft="@drawable/voucher"
            android:onClick="buttonFarmerBilling"
            android:id="@+id/bill"/>
    </TableRow>

    <TableRow
        android:gravity="center">
        <Button
            style="@style/button_style"
            android:text="Settings"
            android:drawableLeft="@drawable/settings"
            android:onClick="buttonFarmerSettings"
            android:id="@+id/settings"/>
    </TableRow>
    <TableRow
        android:gravity="center">
        <Button
            style="@style/button_style"
            android:text="Report"
            android:drawableLeft="@drawable/report"
            android:onClick="buttonFarmerReports"
            android:id="@+id/report"/>
    </TableRow>

</TableLayout>
</ScrollView>