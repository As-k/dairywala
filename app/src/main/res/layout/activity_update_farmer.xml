<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_farmer_ll"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/project_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/farmer_update_iv"
        android:src="@drawable/photo_camera"
        android:onClick="updateImage"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_update_name"
        android:textColorHint="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <EditText
            android:id="@+id/farmer_update_name"
            android:hint="Name"
            android:inputType="textPersonName|textCapWords"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="5dp"
            style="@style/edit_text_style"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_update_cno"
        android:textColorHint="@color/text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <EditText
            style="@style/edit_text_style"
            android:id="@+id/farmer_update_cno"
            android:hint="Contact No."
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="5dp"
            android:inputType="phone"
            android:maxLength="10"
            android:layout_margin="5dp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/update_farmer_save"
        android:text="Save"
        style="@style/button1_style"
        android:layout_marginTop="10dp"
        android:onClick="updateFarmer"/>

</LinearLayout>
