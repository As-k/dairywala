<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/project_color"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:text="Sathya Tech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/final_center_name"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:fontFamily="monospace"
        android:textAlignment="center"/>

    <TextView
        android:text="9052492329"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/final_cno"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="5dp"
        android:background="@drawable/div_bg"/>


    <TableLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                style="@style/text_view_table_style"
                android:text="Bill No :"/>

            <TextView
                android:background="#ffdb3c"
                android:textColor="#000"
                style="@style/text_view_table_style"
                android:text="1121"
                android:id="@+id/final_bill_no"/>

            <TextView
                style="@style/text_view_table_style"
                android:text="Date :"/>

            <TextView
                android:background="#ffdb3c"
                android:textColor="#000"
                style="@style/text_view_table_style"
                android:text="12/17/2007"
                android:id="@+id/final_bill_date"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/text_view_table_style"
                android:text="ID No :"/>

            <TextView
                android:background="#ffdb3c"
                android:textColor="#000"
                style="@style/text_view_table_style"
                android:text="101"
                android:id="@+id/final_farmer_id"/>

            <TextView
                style="@style/text_view_table_style"
                android:text="Day :"/>

            <TextView
                android:background="#ffdb3c"
                android:textColor="#000"
                style="@style/text_view_table_style"
                android:text="AM/PM"
                android:id="@+id/final_farmer_day"/>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/text_view_table_style"
                android:text="Name :"/>

            <TextView
                android:background="#ffdb3c"
                android:textColor="#000"
                style="@style/text_view_table_style"
                android:text="Krishna"
                android:id="@+id/final_farmer_name"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp">
            <TextView
                style="@style/text_view_table_style"
                android:text="Fat % : "/>
            <TextView
                android:text="9.5%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/final_fat_con"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textAlignment="center"/>
            <TextView
                style="@style/text_view_table_style"
                android:text="Liter : "/>
            <TextView
                android:text="9.5%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/final_ltr_con"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow
            android:layout_margin="5dp">
            <TextView
                style="@style/text_view_table_style"
                android:text="Price : "/>
            <TextView
                android:text="9.5%"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/final_ltr_price"
                android:textSize="20sp"
                android:drawableLeft="@drawable/rupee_indian"
                android:drawablePadding="2dp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textAlignment="center"/>
            <TextView
                style="@style/text_view_table_style"
                android:text="Total : "/>
            <TextView
                android:text="900/-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/final_total"
                android:drawableLeft="@drawable/rupee_indian"
                android:drawablePadding="2dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="5dp"
        android:background="@drawable/div_bg"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                style="@style/text_view_table_style"
                android:text="Total To Pay :"/>
            <TextView
                android:text="900/-"
                style="@style/text_view_table_style"
                android:id="@+id/final_total_pay"
                android:textSize="20sp"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/text_view_table_style"
                android:text="Advance : "/>
            <TextView
                android:text="900/-"
                style="@style/text_view_table_style"
                android:id="@+id/final_total_advance"
                android:textSize="20sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                style="@style/text_view_table_style"
                android:text="Balance : "/>
            <TextView
                android:text="900/-"
                style="@style/text_view_table_style"
                android:id="@+id/final_total_balance"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>
</LinearLayout>